<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_paperboard_background"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_upperBar"
        android:name="com.example.blindcommunity.fragment.upperFragment"
        tools:layout="@layout/fragment_upper"
        android:background="@layout/fragment_upper"
        >


    </fragment>

    <FrameLayout
        android:id="@+id/middleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90">

    </FrameLayout>

    <fragment
        android:id="@+id/fragment_lowerBar"
        android:name="com.example.blindcommunity.fragment.lowerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@layout/fragment_lower"
        tools:layout="@layout/fragment_lower">

    </fragment>


</LinearLayout>
